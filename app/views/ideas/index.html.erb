<p id="notice"><%= notice %></p>

<h1>Ideas</h1>
<p>This page was created using Rails Girls Guide</p>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <%= link_to 'New Idea', new_idea_path,  class: 'links'%>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.name %></td>
        <td><%= idea.description %></td>
        <td><%= image_tag idea.picture_url, width: '100%' if idea.picture.present? %></td>
        <td><%= link_to 'Show', idea , class: 'links'%></td>
        <td><%= link_to 'Edit', edit_idea_path(idea), class: 'links' %></td>
        <td><%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' }, class: 'links' %></td>
      </tr>
    <% end %>
  </tbody>
</table>